            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".DoneActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".DestinationActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
